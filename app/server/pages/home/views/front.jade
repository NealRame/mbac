        p.logo
            span.italic m
            span B
            span à
            span C...

    if notifications.length > 0
        section.wrapper
            #notifications
                ul
                    each notification, index in notifications
                        +notification-item(notification, index, notifications.length)
                #notification-progress
                a.notification-close
