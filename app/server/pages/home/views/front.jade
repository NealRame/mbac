mixin achievement-item(achievement)
    - var thumbnail = achievement.pictures[0].thumbnailPath()
    li.thumb
        a(href='/achievements/#{achievement.id}')
            figure.crop(title='#{achievement.name}' data-uri='#{thumbnail}')

mixin notification-item(notification, index, count)
    li.notification
        span= notification.message
            
extends /layout
block content
