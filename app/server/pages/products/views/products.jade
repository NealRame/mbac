extends /layout

mixin product-item(product)
    li.products
        a(href='/products/#{product.id}')
            figure(title='#{product.name}')
                - var thumbnail = product.pictures[0].thumbnailPath()
                img(src='#{thumbnail}')

block content
    section.wrapper
        article
            header
                h1: | Catalogue des produits vendu dans mon Bar Ã  Couture
            #products-wrapper
                ul
                    each product in products
                        +product-item(product)
