extends /layout

mixin picture-item(picture)
    li.thumb: a(href=picture.originalPath())
        img(src=picture.thumbnailPath())

block content
    section.wrapper.blue-filled
        article
            header
                h1: | #{achievement.name}
            section
                #pictures-wrapper
                    ul(style='display: none;')
                        each picture in achievement.pictures
                            +picture-item(picture)
    section.wrapper
        article
            section
                #description-wrapper
                    p: | #{achievement.description}
