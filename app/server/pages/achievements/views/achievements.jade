extends /layout

mixin achievement-item(achievement)
    li.achievement
        a.th(href='/achievements/#{achievement.id}')
            figure(title='#{achievement.name}')
                - var thumbnail = achievement.pictures[0].thumbnailPath()
                img(src='#{thumbnail}')

block content
    section.wrapper
        article
            header: h1
                | Réalisations des clients de mon Bar à Couture
            #content-wrapper
                ul.achievements
                    each achievement in achievements
                        +achievement-item(achievement)
