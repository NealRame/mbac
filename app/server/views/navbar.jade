div.fixed.menu
    nav.top-bar(data-topbar)
        ul.title-area
            li.name.hide-for-medium-up
                h1: a(href="#") mon Bar Ã  Couture
            li.toggle-topbar.menu-icon
                a(href="#"): span
        section.top-bar-section
            ul.right
                if pages['top-bar']
                    each page in pages['top-bar']
                        - var slug = page.slug()
                        - var title = page.title
                        li(class=slug === path ? 'active':'')
                            if title === 'home'
                                a(href=slug): i.fa.fa-home
                            else
                                a(href=slug) #{title}
                if loggedIn
                    li.has-dropdown
                        a
                            img.user-picture(src=user.picture)
                            span.user-name #{user.name.full}
                        ul.dropdown
                            li: a(href=logoutLink)
                                i.fa.fa-sign-out
                                |  Logout
