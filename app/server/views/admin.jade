extends admin-layout

block content
    if ! loggedIn
        section.wrapper
            article
                section
                    p.text-center
                        | Vous devez d'abord vous authentifier avant de pouvoir
                        | continuer:
                        br
                        a(href="#{loginLink}").button.text-center: | Login
    else
        aside#admin-nav
            ul.side-nav
                each entry in menu['admin']
                    if href=entry.page !== page.name
                        li(id='#{entry.page}-menu')
                            a(href='#{entry.slug}'): | #{entry.title}
                            .menu-content-wrapper
                    else
                        li.active(id='#{entry.page}-menu')
                            a(href='#'): | #{entry.title}
                            .menu-content-wrapper
                    li.divider
        div#admin-content-wrapper
            block admin_content
