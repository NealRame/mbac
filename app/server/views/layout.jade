doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/css/style.css')
        script(src='/js/vendors/modernizr.js')

    body
        nav.top-bar(data-topbar)
            ul.title-area
                li.name
                    h1
                        a(href="#") mon Bar à Couture
                li.toggle-topbar.menu-icon
                    a(href="#")
                        span
            section.top-bar-section
                ul.right
                    li.active
                        a(href="#")
                            i.fa.fa-home
                    li
                        a(href="#") mBàC
                    li
                        a(href="#") Services
                    li
                        a(href="#") Réalisations
                    li
                        a(href="#") Contact
                    if loggedIn
                        li.has-dropdown
                            img(src=user.picture width=45 height=45)
                            ul.dropdown
                                li
                                    a(href=logoutLink) Logout
                    else
                        li
                            a(href=loginLink) Login

        block content

        script(src='/js/vendors/jquery.js')
        script(src='/js/vendors/foundation.js')
        script(src='/js/vendors/foundation.topbar.js')
        script.
            $(document).foundation();
