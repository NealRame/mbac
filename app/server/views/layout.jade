doctype html
html
    head
        title= title
        link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Lobster|Raleway:300,700', type='text/css')
        each style in page.stylesheets
            link(rel='stylesheet', href=style)
        script(src='/js/libs/require.js')
    body
        include navbar
        block content
        include footer
        script
            | require(['/js/common.js'], function(common) {
            |     require(['stickyfooter/main']);
            if page.application
                | require(['#{page.application}']);
            | });
