extends layout

block content
    section.wrapper
        article
            header
                h1: | Réalisations des clients de mon Bar à Couture
            section
                | Blah blah sur les réalisations
        
    section.wrapper
        article
            ul.achievements
                each achievement in achievements
                    li.achievement(data-id='#{achievement.id}')
                        figure(title='#{achievement.name}')
                            each picture, index in achievement.pictures
                                - var thmb = picture.thumbnail
                                - var orig = picture.original
                                a.th(href='/files/#{orig}')
                                    img(src='/files/#{thmb}')
                            figcaption: | #{achievement.description}
