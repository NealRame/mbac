extends layout

block content
    section.wrapper
        article
            header
                h1: | Réalisation des clients de mon Bar à Couture
            section
                | Blah blah sur les réalisations
        
    section.wrapper
        each achievement in achievements
            if achievement.published && (achievement.pictures.length > 0)
                ul.clearing-thumbs.clearing-feature(data-clearing)                            
                    each picture, index in achievement.pictures
                        - var thmb = picture.thumbnail
                        - var orig = picture.original
                        li(class=index === 0 ? 'clearing-featured-img':'')
                            a.th(href='/files/#{orig}'): img(src='/files/#{thmb}')
                                
